{
  "$schema": "https://www.krakend.io/schema/v2.4/krakend.json",
  "version": 3,
  "disable_rest": true,
  "endpoints": [
    {
      "endpoint": "/pet",
      "method": "PUT",
      "backend": [
        {
          "url_pattern": "/pet",
          "method": "PUT",
          "host": [
            "https://krakend.test"
          ]
        }
      ]
    },
    {
      "endpoint": "/pet",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/pet",
          "method": "POST",
          "host": [
            "https://krakend.test"
          ]
        }
      ]
    },
    {
      "endpoint": "/pet/{petId}",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/pet/{petId}",
          "method": "GET",
          "host": [
            "https://krakend.test"
          ]
        }
      ]
    },
    {
      "endpoint": "/pet/{petId}",
      "method": "POST",
      "input_query_strings": [
        "name",
        "status"
      ],
      "backend": [
        {
          "url_pattern": "/pet/{petId}",
          "method": "POST",
          "host": [
            "https://krakend.test"
          ]
        }
      ]
    },
    {
      "endpoint": "/pet/{petId}",
      "method": "DELETE",
      "backend": [
        {
          "url_pattern": "/pet/{petId}",
          "method": "DELETE",
          "host": [
            "https://krakend.test"
          ]
        }
      ]
    },
    {
      "endpoint": "/pet/{petId}/uploadImage",
      "method": "POST",
      "input_query_strings": [
        "additionalMetadata"
      ],
      "backend": [
        {
          "url_pattern": "/pet/{petId}/uploadImage",
          "method": "POST",
          "host": [
            "https://krakend.test"
          ]
        }
      ]
    },
    {
      "endpoint": "/user",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/user",
          "method": "POST",
          "host": [
            "https://krakend.test"
          ]
        }
      ]
    },
    {
      "endpoint": "/user/{username}",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/user/{username}",
          "method": "GET",
          "host": [
            "https://krakend.test"
          ],
          "extra_config": {
            "modifier/martian": {
              "header.Modifier": {
                "scope": [
                  "response"
                ],
                "name": "Cache-Control",
                "value": "max-age=0, must-revalidate, private"
              }
            }
          }
        }
      ]
    },
    {
      "endpoint": "/user/{username}",
      "method": "PUT",
      "backend": [
        {
          "url_pattern": "/user/{username}",
          "method": "PUT",
          "host": [
            "https://krakend.test"
          ]
        }
      ]
    },
    {
      "endpoint": "/user/{username}",
      "method": "DELETE",
      "backend": [
        {
          "url_pattern": "/user/{username}",
          "method": "DELETE",
          "host": [
            "https://krakend.test"
          ]
        }
      ]
    }
  ]
}